{
	"manifest_version": 2,
	"name": "JobCan Quick Stamp",
	"version": "1.1.3",
	"description": "Chrome extension for quick clocking on JobCan (unofficial)",
	"browser_action": {
		"default_popup": "pages/popup.html"
	},
	"background": {
		"scripts": [
			"node_modules/jquery/dist/jquery.min.js",
			"models/stamp-status-checker.js",
			"scripts/background.js"
		]
	},
	"options_page": "pages/options.html",
	"permissions": [
		"http://jobcan.jp/m/*",
		"https://ssl.jobcan.jp/m/*",
		"storage",
		"geolocation"
	],
	"icons": {
		"128": "images/icon.png"
	},
	"homepage_url": "https://github.com/mugifly/chrome-ext-jobcan-quick-stamp"
}
